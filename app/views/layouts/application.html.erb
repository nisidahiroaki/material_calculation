<!DOCTYPE html>
<html>
  <head>
    <title>MaterialCalculation</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header__title">
        <%= link_to "材料の「取り」アプリ", root_path, class: "header__title__text" %>
      </div>
      <div class="header__right">
        <% if user_signed_in? %>
          <%= link_to current_user.name, user_path(current_user), class: "header__right__btn"%>
          <%= link_to "シート登録", new_item_path, class: "header__right__btn" %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__right__btn" %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: "header__right__btn" %>
          <%= link_to "新規登録", new_user_registration_path, class: "header__right__btn" %>
        <% end %>
      </div>
    </header>

    <div class="contents">
      <%= yield %>
    </div>
  </body>
</html>
